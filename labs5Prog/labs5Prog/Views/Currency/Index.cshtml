@using labs5Prog.Models;
@model IEnumerable<Currency>
@{
    ViewData["Title"] = "Home Page";
}

<h2>Список Валют</h2>
<p><a asp-controller="Currency" asp-action="Create">Добавить валюту</a></p>
<table class="table">
    <tr>
        <th>
            Валюта
        </th>
        <th>
            Код
        </th>
        <th>
        </th>
        <th>
        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.Code</td>
            <td>
                <a asp-action="Edit" asp-controller="Currency" asp-route-id="@item.Id">Изменить</a>
            </td>
            <td>
                <form asp-controller="Currency" asp-action="Delete" method="post" asp-route-id="@item.Id">
                    <input type="submit" value="Удалить" />
                </form>
            </td>
        </tr>
    }
</table>
